<h1>YUMMY BURGERS!</h1>

<h2>WHO'S HUNGRY FOR SOME BURGERS?!?!??</h2>

<form class="create-form">
  <div class="form-group">
    <label for="burg"></label>
    <input class="myform" type="text" id="burg" placeholder="type in your desired burger &#128523 " name="burger_name">
  </div>
  <button type="submit" class="btn btn-danger btn-lg">ADD THAT BURG!</button>
</form>

<div class="row">
  <div class="col-sm-6">
    <h1><span class="badge badge-secondary">BURGERS TO EAT!</span></h1>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-6">
    <h1><span class="badge badge-secondary">BURGERS I ATE!</span></h1>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>